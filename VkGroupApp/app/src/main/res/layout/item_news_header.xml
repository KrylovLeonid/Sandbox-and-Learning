<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:id="@+id/civ_profile_image"
                android:layout_marginStart="16dp"
                tools:src="@color/colorAccent"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_profile_name"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:lines="1"
                android:layout_toRightOf="@+id/civ_profile_image"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:textSize="16sp"
                tools:text="OPTHIOS SHIIIT"
                />
            <ImageView
                android:id="@+id/iv_reposted_icon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginStart="16dp"
                android:src="@drawable/outline_arrow_back_black_24dp"
                android:tint="@color/colorIcon"
                android:layout_toRightOf="@+id/tv_profile_name"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_author_name"
                android:layout_marginStart="16dp"
                android:lines="1"
                android:ellipsize="end"
                tools:text="reposted"
                android:textColor="@color/colorAccent"
                android:textSize="15sp"
                android:layout_toRightOf="@+id/iv_reposted_icon"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentTop="true"
            android:background="@color/colorDivider"/>

    </RelativeLayout>

</RelativeLayout>